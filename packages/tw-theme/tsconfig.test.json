{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/**/__tests__/**/*",
    "jest.setup.js"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
