{
  "name": "@ownui/tw-theme",
  "version": "2.0.0",
  "description": "Tailwind CSS plugin for semantic theming with CSS custom properties",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./theme": {
      "import": "./dist/theme.js",
      "require": "./dist/theme.js"
    },
    "./variants": {
      "import": "./dist/variants/index.js",
      "require": "./dist/variants/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "build:lib": "tsup",
    "build": "npm run build:lib",
    "postbuild": "rimraf .tmp",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm run build",
    "e2e:build": "node e2e/scripts/compile-fixtures.js",
    "e2e:test": "playwright test --config=e2e/playwright.config.ts",
    "e2e:test:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "e2e:report": "playwright show-report e2e/playwright-report",
    "e2e": "pnpm e2e:build && pnpm e2e:test"
  },
  "keywords": [
    "tailwindcss",
    "theme",
    "plugin",
    "css",
    "custom-properties"
  ],
  "peerDependencies": {
    "tailwindcss": ">= 3.4.17 <4.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@tailwindcss/cli": "^4.1.11",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.0",
    "cssnano": "^7.0.7",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "postcss": "^8.4.38",
    "postcss-apply": "^0.12.0",
    "postcss-js": "^4.0.1",
    "postcss-nesting": "^13.0.2",
    "rimraf": "^6.0.1",
    "sirv-cli": "^2.0.2",
    "tailwindcss": "4.1.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
