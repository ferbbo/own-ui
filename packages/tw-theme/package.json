{
  "name": "@ownui/tw-theme",
  "version": "0.1.0",
  "description": "Tailwind CSS plugin for semantic theming with CSS custom properties",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./theme": {
      "import": "./dist/theme.js",
      "require": "./dist/theme.js"
    }
  },
  "type": "module",
  "scripts": {
    "build:components": "node src/build/build.js",
    "build:lib": "tsup",
    "build": "npm run build:components && npm run build:lib",
    "postbuild": "rimraf .tmp",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "tailwindcss",
    "theme",
    "plugin",
    "css",
    "custom-properties"
  ],
  "peerDependencies": {
    "tailwindcss": ">= 3.4.17 <4.1.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/jest": "^29.5.12",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "postcss": "^8.4.38",
    "postcss-apply": "^0.12.0",
    "postcss-js": "^4.0.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "4.1.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
