{
  "name": "@ownui/loader",
  "version": "1.0.1",
  "description": "Loader component for loading states with different sizes and colors.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "keywords": [
    "loader",
    "spinner",
    "loading"
  ],
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src"
  },
  "author": "ferbbo <Diego Benitez>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18 || <20.0.0",
    "react-dom": ">=18 <20.0.0"
  },
  "dependencies": {
    "@ownui/tw-theme": "workspace:*"
  },
  "devDependencies": {
    "@storybook/react": "^8.6.12",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "react": "^19.0.1",
    "react-dom": "^19.0.1",
    "tsup": "^8.4.0"
  }
}
