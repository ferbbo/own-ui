{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "version": {
      "dependsOn": ["build"],
      "outputs": ["package.json"]
    },
    "release": {
      "dependsOn": ["build", "version"],
      "outputs": []
    }
  }
}
