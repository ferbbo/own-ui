{
  "name": "ownui",
  "version": "1.0.0",
  "description": "A React component library built with TypeScript, Tailwind CSS, and Vite",
  "scripts": {
    "build": "turbo build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:components": "jest --selectProjects components",
    "test:tw-theme": "jest --selectProjects tw-theme",
    "test:components:watch": "jest --selectProjects components --watch",
    "test:tw-theme:watch": "jest --selectProjects tw-theme --watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md,json}'",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "example": "cd apps/example-app && pnpm dev",
    "example:build": "cd apps/example-app && pnpm build",
    "example:install": "cd apps/example-app && pnpm install"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@storybook/react": "^8.6.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.9",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint-plugin-storybook": "^0.12.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.51.1",
    "react": "^19.0.3",
    "react-dom": "^19.0.3",
    "ts-jest": "^29.2.6",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3",
    "vitest": "^3.0.9"
  },
  "pnpm": {
    "overrides": {
      "react": "19.0.3",
      "react-dom": "19.0.3",
      "@changesets/get-github-info": "0.6.0"
    }
  },
  "engines": {
    "node": ">=20.x",
    "pnpm": ">=10.x"
  },
  "packageManager": "pnpm@10.7.0",
  "dependencies": {
    "@react-aria/button": "^3.13.1",
    "@react-aria/utils": "^3.29.0"
  }
}
